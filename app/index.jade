		link(rel='stylesheet', href='css/app.css')
	body
		h1 Memory Game!

		div#gameGrid
			table
				thead
					tr
						th
				tbody
					- for(var i = 0; i < 3; ++i)
						tr
							- for(var j = 0; j < 7; ++j)
								td.panel(id='panel'+(7*i+j))
									.container
										.flipper
											img.back(src='media/images/panels/hidden.png')
											img.front(src='media/images/panels/heisenberg.png')
		div#gameInfo
			button#start Start
			#clock Hello

			
			button#animate Aminate

